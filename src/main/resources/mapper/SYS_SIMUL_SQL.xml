    <select id="LIST_SYS_RPT_PUSH" resultType="map">
        SELECT 
            AREANAME AS areaName
            , RCVTIME AS rcvTime
            , STRCODE AS strCode
            , STRNAME AS strName
            , STROWNTEL AS strOwnTel
            , SNSRKWHAVG AS snsrKwhAvg
            , SNSRKWHSUM AS snsrKwhSum
            , SNSRKWHRANK AS snsrKwhRank
            , SNSRKWHMEMO AS snsrKwhMemo
            , OCALM AS ocAlm
            , IGALM AS igAlm
            , EVTGRADE AS evtGrade
            , EVTRANK AS evtRank
            , EVTMEMO AS evtMemo
        FROM
            ifiresens_v2.F_RPT_PUSH_LIST
        WHERE
            ISUSE = 'Y'
    </select>

    <select id="LIST_SYS_IGREVT_PUSH" resultType="map">
        SELECT
            AREANAME AS areaName
            , RCVTIME AS rcvTime
            , STRCODE AS strCode
            , STRNAME AS strName
            , STROWNTEL AS strOwnTel
            , ROUND(SNSRIGR) AS snsrIgr
        FROM
            ifiresens_v2.F_IGREVT_PUSH_LIST
        WHERE
            ISUSE = 'Y'
