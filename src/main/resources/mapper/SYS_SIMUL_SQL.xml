    <insert id="INSERT_SYS_PUSH" parameterType="map">
        INSERT INTO ifiresens_v2.F_PUSH_LOG (
            SNSRSEQ
            , PUSHMSG
            , PUSHSTIME
            , USERID
            , SENDRESULT
            , RESENDSEQ
            , TOINFO
            , FROMINFO
            , PUSHRSLT
        ) VALUES (
            #{snsrseq}
            , #{pushmsg}
            , NOW()
            , #{userid}
            , #{sendresult}
            , #{resendseq}
            , #{toinfo}
            , #{frominfo}
            , #{pushRslt}
        )
    </insert>

